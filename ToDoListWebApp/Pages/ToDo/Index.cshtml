@page
@model ToDoListWebApp.Pages.ToDo.IndexModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/site.css">
    <title>Index</title>
</head>
<body>
<div class="wrapper">
    <button class="createbutton">
        <a asp-page="Create">Create New</a>
    </button>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ToDOList[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDOList[0].UserEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDOList[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDOList[0].DueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDOList[0].Done)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDOList[0].DoneDate)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ToDOList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Done)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoneDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
